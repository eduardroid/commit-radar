+class OrderService:
+    def __init__(self, tax_rate):
+        self.tax_rate = tax_rate
+
+    def _subtotal(self, items):
+        subtotal = 0
+        for item in items:
+            subtotal += item.price
+        return subtotal
+
+    def _tax(self, subtotal):
+        return subtotal * self.tax_rate
+
+    def calculate_total(self, items):
+        """
+        Calcula el total de la orden en base a los items y la tasa de impuestos.
+        """
+        subtotal = self._subtotal(items)
+        tax = self._tax(subtotal)
+        return subtotal + tax
+
+    def calculate_subtotal_without_tax(self, items):
+        """
+        Método explícito para obtener el subtotal sin impuestos.
+        """
+        return self._subtotal(items)

