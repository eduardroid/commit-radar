+from cart import Cart
+
+
+class Item:
+    def __init__(self, price):
+        self.price = price
+
+
+def test_total_returns_sum_of_prices():
+    cart = Cart([Item(10), Item(15)])
+
+    assert cart.total() == 25
+
+
+def test_add_item_increases_total():
+    cart = Cart()
+    cart.add_item(Item(5))
+    cart.add_item(Item(7))
+
+    assert cart.total() == 12
+
+
+def test_clear_empties_cart():
+    cart = Cart([Item(1), Item(2), Item(3)])
+
+    assert cart.total() == 6
+
+    cart.clear()
+
+    assert cart.total() == 0
